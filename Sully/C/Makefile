# **************************************************************************** #
# *** Main Definitions                                                         #
# **************************************************************************** #

NAME = Sully

CC = clang
CCFLAGS = -Wall -Werror -Wextra 

SRC_DIR = ./
OBJ_DIR = ./build

SRCS = ${SRC_DIR}/Sully.c

OBJS = $(patsubst ${SRC_DIR}/%.c, ${OBJ_DIR}/%.o, ${SRCS})

# **************************************************************************** #
# *** Main Rules                                                               #
# **************************************************************************** #

all: ${NAME}

${NAME}: ${OBJS} Makefile
	@gcc ${CCFLAGS} ${OBJS}  -o ${NAME}
	@echo "\033[96m${NAME} is built. \033[0m"


${OBJ_DIR}/%.o: $(SRC_DIR)/%.c Makefile
	@mkdir -p ${@D}
	@${CC} ${CCFLAGS} -c $< -o $@


# **************************************************************************** #
# *** Common Rules                                                             #
# **************************************************************************** #
clean:
	@rm -rf ${OBJ_DIR}

fclean: clean
	@rm -rf ./${NAME}

re: fclean all	
